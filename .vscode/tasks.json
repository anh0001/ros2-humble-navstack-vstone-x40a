{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RViz: Robot Model Display",
            "type": "shell",
            "command": "DISPLAY=:77 XAUTHORITY=$HOME/.Xauthority xterm -hold -e \"source /opt/ros/humble/setup.bash && source install/setup.bash && ros2 launch mecanumrover_description display.launch.py > eval.log 2>&1\" &",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-ic"]
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Build Workspace",
            "type": "shell",
            "command": "colcon",
            "args": ["build", "--symlink-install"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Build the entire ROS 2 workspace"
        },
        {
            "label": "Clean Build Workspace",
            "type": "shell",
            "command": "colcon",
            "args": ["build", "--symlink-install", "--cmake-clean-cache"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Clean build the entire ROS 2 workspace"
        }
    ]
}